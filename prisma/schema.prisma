generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Admin {
    id String @id @default(uuid(7))

    username       String    @unique
    password       String
    sesameId       String?   @unique
    sesameLinkedAt DateTime? @map("sesame_linked_at")
    firstname      String?
    lastname       String?

    updatedAt DateTime  @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    validatedPlayers Player[] @relation("admin_validator")

    @@map("admin")
}

model Player {
    id String @id @default(uuid(7))

    username       String    @unique
    password       String?
    sesameId       String?   @unique
    sesameLinkedAt DateTime? @map("sesame_linked_at")
    firstname      String?
    lastname       String?

    accountValidatedBy String?   @map("account_validated_by")
    accountValidatedAt DateTime? @map("account_validated_at")

    updatedAt DateTime  @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    groups         Group[] @relation("group_to_player")
    adminValidator Admin?  @relation("admin_validator", fields: [accountValidatedBy], references: [id])

    @@map("player")
}

model Group {
    id String @id @default(uuid(7))

    name        String  @unique
    description String?

    updatedAt DateTime  @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    players Player[] @relation("group_to_player")

    @@map("group")
}
