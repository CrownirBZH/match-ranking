{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": { "ignoreUnknown": false, "ignore": [] },
	"formatter": { "enabled": true, "indentStyle": "tab", "indentWidth": 4 },
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": { "useImportType": "info" },
			"complexity": { "noStaticOnlyClass": "off" },
			"correctness": {
				"noUnusedImports": "info",
				"noUnusedVariables": "info",
				"noUnusedFunctionParameters": "info",
				"noUnusedLabels": "info",
				"noUnusedPrivateClassMembers": "info"
			}
		}
	},
	"javascript": {
		"formatter": { "quoteStyle": "single" },
		"parser": { "unsafeParameterDecoratorsEnabled": true }
	}
}
